<% provide(:title, "Edit product") %>
<h1>Update product</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control marginbottom10' %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: 'form-control marginbottom10' %>

    <%= f.label :description, "description" %>
    <%= f.text_field :description, class: 'form-control marginbottom10' %>

    <%= f.label :price, "price" %>
    <%= f.text_field :price, class: 'form-control marginbottom10' %>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>