<% provide(:title, 'Create new category') %>
<h1>New category</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@category) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control marginbottom10' %>

		<%= f.submit "Create your new category", class: "btn btn-primary margintop20" %>
		<% end %>
	</div>
</div>