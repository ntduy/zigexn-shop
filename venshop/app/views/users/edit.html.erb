<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control marginbottom10' %>

     <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control marginbottom10' %>

     <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control marginbottom10' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control marginbottom10' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control marginbottom10' %>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>