<header>
	
	<div class="container">
		<div class="main-header">
			<div class="row">
				<div class="col-md-3 pull-left margintop10 marginbottom10">
					<%=link_to image_tag("logo.jpg"),root_path %>
					
				</div>
				<div class="input-group pull-left col-md-4 margintop10 marginbottom10">
					<input type="text" class="form-control" placeholder="Search for...">
					<span class="input-group-btn">
						<button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
					</span>
				</div>
				
				<div class="col-sm-4 pull-right margintop10">
					<nav>
						<ul class="nav navbar-nav">
							<li><%= link_to "Sign Up", signup_path %></li>
							<% if logged_in? %>
							<% if current_user.admin?%>
							<li class="dropdown">
								<a class="dropdown-tggle" data-toggle="dropdown">Management <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to "Users", users_path %></li>
									<li><%= link_to "Products", products_path %></li>
									<li><%= link_to "Categories", categories_path %></li>
								</ul>
							</li>
							<% end %>
							
							<li class="dropdown">
								<a class="dropdown-tggle" data-toggle="dropdown">Account <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to "Profile", current_user %></li>
									<li><%= link_to "Settings", edit_user_path(current_user) %></li>
									<li class="devider"></li>
									<li>
										<%= link_to "Log out", logout_path, method: "delete" %>
									</li>
								</ul>
							</li>
							<% else %>
							<li><%= link_to "Log in", login_path %></li>
							<% end %>
						</ul>
					</nav>
					<div class="cart margintop30 pull-right">
						<div class="cart-w">
							<div class="cart-info">
								<span>
									<a href="#" class="btn-cart">
										<i class="glyphicon glyphicon-shopping-cart"></i>
										<strong>CART</strong>
										<span>2 products</span>
									</a>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="margintop10 marginbottom10">
		<table class="table-category">
			<tr>
				<% category.each do |cate| %>
				<td class="text-center category"><%= link_to cate.name, category_path(cate) %></td> 
				<% end %>
			</tr>
		</table>
	</div>
	</div>
	<!-- end main-header -->
	<!-- navbar-fixed-top -->
</header>